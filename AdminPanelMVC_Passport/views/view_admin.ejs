<%- include('header') %>

<!-- Page Sidebar Ends-->
        <div class="page-body">
          <div class="container-fluid">
            <div class="page-title"> 
              <div class="row">
                <div class="col-12 col-sm-6">
                  <h3>Admin Details</h3>
                </div>
                <div class="col-12 col-sm-6">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/"><i data-feather="home"> </i></a></li>
                    <li class="breadcrumb-item">Admin</li>
                    <li class="breadcrumb-item active">View Admin</li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
          <!-- Container-fluid starts-->
          <div class="container-fluid">
            <div class="row">
              <div class="col-sm-12">
                <div class="card">
                  <div class="card-header">
                    <h5>View Admin</h5>
                  </div>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th scope="col">#</th>
                          <th scope="col">Name</th>
                          <th scope="col">Email</th>
                          <th scope="col">Password</th>
                          <th scope="col">Contact Number</th>
                          <th scope="col">Gender</th>
                          <th scope="col">Hobby</th>
                          <th scope="col">Description</th>
                          <th scope="col">Avtar</th>
                          <th scope="col">Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for(var record of adminRecord) { %>
                        

                        <tr>
                          <th scope="row">1</th>
                          <td><%= record.name %></td>
                          <td><%= record.email %></td>
                          <td><%= record.password %></td>
                          <td><%= record.phone %></td>
                          <td><%= record.gender %></td>
                          <td><%= record.hobby %></td> 
                          <td><%= record.description %></td>
                          <td>
                            <img src="<%= record.avtar %>" alt="" width="70" height="70" style="object-fit: cover;">
                          </td>
                          <td>
                            <a href="/deleteAdmin/<%= record.id %>">
                              <i class="fa fa-trash-o fa-lg" aria-hidden="true"></i>
                            </a> || 
                            <a href="/update_admin/?adminId=<%= record.id %>">
                              <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
                            </a>
                          </td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>  
            </div>
          </div>
          <!-- Container-fluid Ends-->
        </div>

        <%- include('footer') %>